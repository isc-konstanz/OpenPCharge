<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
  <driver id="pcharge">
    <name>P-CHARGE</name>
    <description><![CDATA[
        This driver implements the communication with an EWS-Box charging controller for electric vehicles.<br>
        Each device represents a physical device with two possible, separately controlled charging ports.
      ]]>
    </description>
    
    <deviceAddress>
      <option id="tcpPort">
        <name>TCP port</name>
        <description><![CDATA[
            The TCP Port to listen on, as configured in the EWS-Box configurations.
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>INTEGER</type>
      </option>
    </deviceAddress>
    
    <deviceScanSettings><disabled>true</disabled></deviceScanSettings>
    
    <channelAddress>
      <syntax>
        <keyValue>false</keyValue>
      </syntax>
      <option id="id">
        <name>Key</name>
        <description><![CDATA[
            The unique key, identifying the type of information that should be read of the charge port.
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>String</type>
        <selection>
          <item value="STATUS">Status</item>
          <item value="CABLE_VOLTAGE">Cable Voltage</item>
          <item value="CABLE_CURRENT">Cable Current Limit</item>
          <item value="CHARGING_CURRENT">Charging Current</item>
          <item value="CHARGING_AUTHORIZATION_STATUS">Charging Authorization Status</item>
          <item value="CHARGING_OPTIMIZED">Charging Optimization</item>
          <item value="CHARGING_COMPLETE_STATUS">Charging Complete Status</item>
          <item value="CHARGING_DURATION">Charging Duration</item>
          <item value="CHARGING_DURATION_LAST">Charging Duration of the last Charge Period</item>
          <item value="CHARGING_ENERGY">Charging Energy Consumption</item>
          <item value="CHARGING_ENERGY_TOTAL">Total Charging Energy Consumption</item>
          <item value="CHARGING_CYCLE_COUNTER">Total Charging Cycles</item>
          <item value="VENTILATION_REQUEST">Ventilation request</item>
          <item value="LOCKED">Plug Lock</item>
          <item value="CONTACTOR">Contactor state</item>
          <item value="RCD">RCD state</item>
          <item value="PWM_MINIMUM">Minimum Voltage of PWM</item>
          <item value="PWM_MAXIMUM">Maximum Voltage of PWM</item>
          <item value="BUTTON_1_START">Start Button</item>
          <item value="BUTTON_2_STOP">Stop Button</item>
          <item value="BUTTON_3_OPTIMIZED">Optimized Charging Button</item>
          <item value="BUTTON_4_SPARE">Spare Button</item>
          <item value="LED_RED_ERROR">Red Error LED</item>
          <item value="LED_GREEN_READY">Green Ready LED</item>
          <item value="LED_ORANGE_OPTIMIZED">Orange Optimized Charging Active LED</item>
          <item value="LED_SPARE">Spare LED</item>
          <item value="RFID_LOGIN">RFID Login</item>
          <item value="RFID_GROUP">RFID Groups</item>
          <item value="RFID_CARD">RFID Card</item>
          <item value="RFID_USER">RFID User</item>
          <item value="EVENT_PORT">RFID Port Event</item>
          <item value="EVENT_RFID">RFID Event</item>
        </selection>
      </option>
    </channelAddress>
    
    <channelSettings>
      <option id="chargePort">
        <name>Charge Port</name>
        <description><![CDATA[
            The charge port, information should be read for.
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>INTEGER</type>
        <selection>
          <item value="1">Port 1</item>
          <item value="2">Port 2</item>
        </selection>
      </option>
    </channelSettings>
  </driver>
</configuration>
